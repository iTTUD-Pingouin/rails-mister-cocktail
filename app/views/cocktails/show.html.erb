
<div class="container">
  <h1><%= @cocktail.name %></h1>

  <p>Ingredients :</p>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%=dose.ingredient.name%> - <%= dose.description %>
        <%= link_to 'Delete', dose_path(dose), method: :delete %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>

  <%= link_to 'Back home', cocktails_path %>
</div>



